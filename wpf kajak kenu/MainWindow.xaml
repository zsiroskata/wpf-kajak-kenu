<Window x:Class="wpf_kajak_kenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_kajak_kenu"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid Name="KajakDataGrid" AutoGenerateColumns="False" IsReadOnly="True" HorizontalAlignment="Left" Height="200" Margin="50,50,0,0" VerticalAlignment="Top" Width="600">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Név" Binding="{Binding Nev}"/>
                <DataGridTextColumn Header="Azonosító" Binding="{Binding Azonosito}"/>
                <DataGridTextColumn Header="Típus" Binding="{Binding Tipus}"/>
                <DataGridTextColumn Header="Személyek Száma" Binding="{Binding SzemelyekSzama}"/>
                <DataGridTextColumn Header="Elvitel Időpontja" Binding="{Binding ElvitelIdo}" />
                <DataGridTextColumn Header="Visszahozatal Időpontja" Binding="{Binding VisszahozatalIdo}" />
            </DataGrid.Columns>
        </DataGrid>





    </Grid>
</Window>
